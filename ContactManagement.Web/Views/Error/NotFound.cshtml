@{
    ViewBag.Title = "Page Not Found";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container text-center">
    <h1 class="text-danger">404 - Page Not Found</h1>
    <p>The page you requested could not be found.</p>
    <img src="~/Content/Images/404-error.png" alt="Page not found" class="img-responsive center-block" style="max-height: 300px;" />
    <div class="mt-3">
        @Html.ActionLink("Back to Home", "Index", "Home", null, new { @class = "btn btn-primary" })
    </div>
</div>
